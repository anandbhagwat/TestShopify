    <test name="Test Shopify FireFox" preserve-order="true" >
        <parameter name="myBrowser" value="FF"></parameter>
        <classes>
            <class name="com.commerce.HomePageTest">
                <methods>
                    <include name="validateLandingOfHomePage"/>
